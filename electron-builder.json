{
  "appId": "com.dms.a",
  "productName": "dms-a",
  "asar": true,
  "directories": {
    "output": "release/",
    "buildResources": "build-assets/"
  },
  "files": [
    "**/*",
    "!**/*.ts",
    "!*.map",
    "!package.json",
    "!package-lock.json",
    {
      "from": "../dist",
      "filter": ["**/*"]
    }
  ],
  "win": {
    "target": "nsis",
    "icon": "dist/assets/icons/favicon.png"
  },
  "publish": {
    "provider": "github",
    "owner": "amddogy",
    "repo": "dms-a",
    "protocol": "https"
  },
  "nsis": {
    "oneClick": true,
    "allowToChangeInstallationDirectory": false
  },
  "portable": {
    "splashImage": "dist/assets/icons/favicon.png"
  },
  "mac": {
    "icon": "dist/assets/icons",
    "target": [
      "dmg"
    ]
  },
  "linux": {
    "icon": "dist/assets/icons",
    "target": [
      "AppImage"
    ]
  }
}
